@model Product
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<br />
<div class="container">
    @using (Html.BeginForm("Add", "Product", FormMethod.Post))
    {

        <div class="form-group">
            <label for="nameinput">Введите наименование</label>
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", id = "nameinput" } })
        </div>
        <div class="form-group">
            <label for="priceinput">Введите цену</label>
            @Html.EditorFor(x => x.Price, new { htmlAttributes = new { @class = "form-control", id = "priceinput" } })
        </div>

        <input type="submit" value="Добавить" class="btn btn-primary" />


    }
</div>
<div class="container"><br />
    @Html.ActionLink("Назад", "Index", "Product", null, new { @class = "btn btn-primary" })</div>
